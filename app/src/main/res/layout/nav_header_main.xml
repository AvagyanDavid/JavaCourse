<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/navigationBg"
    android:gravity="center"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" >

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Explorer"
        app:srcCompat="@drawable/portrain_ic_back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Explorer"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="@string/Explorer"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/Explorer"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        app:srcCompat="@drawable/portrain_ic_create_file" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:contentDescription="@string/Explorer"
        app:srcCompat="@drawable/portrain_ic_refresh" />


</LinearLayout>